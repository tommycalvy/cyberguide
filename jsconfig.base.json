{
    "$schema": "https://json.schemastore.org/jsconfig",
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "strict": true,
        "checkJs": true,
        "baseUrl": ".",
        "noEmit": true,
        "esModuleInterop": true,
        "preserveSymlinks": true,
        "paths": {
            "@cyberguide/*": [
                "packages/*/src/index.js",
                "packages/*/src/types.d.ts"
            ]
        }
    }
}
