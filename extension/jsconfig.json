{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    },
    "moduleResolution": "node",
    "checkJs": true,
    "target": "ESNext",
    "module": "ESNext",
    "strictNullChecks": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "dev"]
}
