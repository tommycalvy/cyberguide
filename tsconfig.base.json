{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "types": ["vite/client", "path"],
    "noEmit": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ],
    "paths": {
      "@cyberguide/shared/error-handling": [
        "libs/shared/error-handling/src/index.js"
      ],
      "@cyberguide/types/shared": ["libs/shared/types/src/index.js"],
      "@cyberguide/web-extension/global-listener": [
        "libs/web-extension/global-listener/src/index.js"
      ],
      "browser-mock": ["libs/web-extension/browser-mock/src/index.js"]
    }
  },
  "exclude": ["node_modules"]
}
